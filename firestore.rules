rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Since you're using Django authentication, we'll allow read/write based on data validation
    // and trust your client-side authentication
    
    // Users collection - allow read for all authenticated requests, write for own data
    match /users/{userId} {
      allow read: if true; // Allow reading user data for conversations
      allow write: if true; // Trust client-side validation for now
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Allow read/write for conversations
      // We trust that your Django backend validates users before they access conversations
      allow read, write: if true;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if true;
      }
      
      // ReadStatus subcollection  
      match /readStatus/{statusId} {
        allow read, write: if true;
      }
      
      // Typing subcollection
      match /typing/{typingId} {
        allow read, write: if true;
      }
    }
    
    // For production, you might want to add custom token validation
    // or implement server-side security through your Django backend
    
    // Allow all other collections for now
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
